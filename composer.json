{
  "name": "michaelhall/html-validator-plugin",
  "description": "BlueMvc plugin for html validation",
  "license": "MIT",
  "keywords": [
    "blue",
    "mvc",
    "html",
    "validate",
    "validation",
    "plugin"
  ],
  "authors": [
    {
      "name": "Michael Hall",
      "homepage": "https://michaelhall.se/"
    }
  ],
  "require": {
    "php": ">=5.6",
    "ext-curl": "*",
    "bluemvc/bluemvc-core": "dev-master"
  },
  "require-dev": {
    "bluemvc/bluemvc-fakes": "dev-master",
    "phpunit/phpunit": "~5.5||~6.0"
  },
  "autoload": {
    "psr-4": {
      "MichaelHall\\HtmlValidatorPlugin\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MichaelHall\\HtmlValidatorPlugin\\Tests\\": "tests"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}