{
  "name": "michaelhall/html-validator-plugin",
  "description": "BlueMvc plugin for HTML validation",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "blue",
    "mvc",
    "html",
    "validate",
    "validation",
    "plugin"
  ],
  "authors": [
    {
      "name": "Michael Hall",
      "homepage": "https://michaelhall.se/"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "bluemvc/bluemvc-core": "^2.0",
    "datatypes/datatypes": "^1.2||^2.0",
    "michaelhall/http-client": "^1.0"
  },
  "require-dev": {
    "bluemvc/bluemvc-fakes": "^2.0",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "MichaelHall\\HtmlValidatorPlugin\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MichaelHall\\HtmlValidatorPlugin\\Tests\\": "tests"
    }
  }
}